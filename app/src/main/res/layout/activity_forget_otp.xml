<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_x2"
    android:background="@drawable/back"
    tools:context=".activity.ForgetOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="@dimen/margin_x"
        android:background="@drawable/form_edit_text_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/LayoutHeadings"
                    android:layout_weight="1"
                    android:text="Enter OTP"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invalid OTP."
            android:textSize="@dimen/margin_2x"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/error1"
            android:textColor="@color/material_red"
            android:layout_gravity="center"
            android:gravity="center"
            />

    <TextView
        android:id="@+id/phone111111"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:padding="8dp"
        android:textColor="#000"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/phone1111"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:textColor="#000"
        android:visibility="invisible" />

        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3x"
            android:layout_marginRight="@dimen/margin_3x">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edittext_bg">

                <EditText
                    android:id="@+id/phonenumberforget11"
                    style="@style/TextInputLayoutStyle"
                    android:gravity="start|center_vertical"
                    android:hint="Enter Otp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/padding_x2" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sendotpforget11"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_x"
            android:background="@drawable/button_selector_1"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="16dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="end"
    android:layout_height="wrap_content"
    android:id="@+id/hiiiii"
    android:text="Resend Otp ?"
    android:layout_marginTop="@dimen/fab_margin"
    android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>