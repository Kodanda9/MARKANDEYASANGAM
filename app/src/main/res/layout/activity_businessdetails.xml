<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".activity.BUSINESSDETAILS">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginLeft="@dimen/margin_2x"
            android:text="Member Id                 :"
            android:textSize="@dimen/margin_2x"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memberidbusiness"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Type          :"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:textSize="@dimen/margin_2x"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/businesstype"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:layout_marginRight="@dimen/margin_x"
            android:background="#f0f0f4"

            android:gravity="center"
            android:padding="@dimen/margin_x" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:text="Business Category  :"
            android:textSize="@dimen/margin_2x"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/businesscatagory"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:layout_marginRight="@dimen/margin_x"

            android:background="#f0f0f4"

            android:gravity="center"
            android:padding="9dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annual Income         :"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:textSize="@dimen/margin_2x"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/annualicomebusiness"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin_2x"
            android:background="#f0f0f4"
            android:padding="8dp"
            android:layout_marginRight="@dimen/margin_x"

            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Business Details :"
            android:textSize="@dimen/margin_2x"
            android:layout_marginLeft="@dimen/margin_2x"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/businessdetails"
            android:layout_width="340dp"
            android:layout_height="78dp"

            android:background="#f0f0f4"
            android:padding="9dp"
            android:layout_marginLeft="@dimen/margin_x"
            android:layout_marginRight="@dimen/margin_x"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/submitbusiness"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="14dp" />
</LinearLayout>