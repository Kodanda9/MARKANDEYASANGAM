<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".activity.EMPLOYMENTDETAILS">


<Spinner
    android:layout_marginLeft="@dimen/margin_x"
    android:layout_marginRight="@dimen/margin_x"
    android:id="@+id/employeementspinner"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="30dp">

</Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="35dp">

        <TextView
            android:layout_marginLeft="@dimen/margin_2x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Category                :"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/catagoryemployement"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_x"
            android:layout_marginRight="@dimen/margin_3x"
            android:background="#f0f0f4"
            android:gravity="center"
            android:padding="6dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:text="Annual Income     :"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/incomeemployement"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/margin_x"
            android:layout_marginRight="@dimen/margin_3x"
            android:background="#f0f0f4"
            android:gravity="center"
            android:padding="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_2x"
            android:text=" Employment in details"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/employementdetails"
            android:layout_width="330dp"
            android:layout_height="93dp"
            android:layout_marginLeft="@dimen/margin_2x"
            android:layout_marginRight="@dimen/margin_3x"
            android:background="#f0f0f4"
            android:hint="  "
            android:padding="10dp"
            android:textSize="@dimen/margin_2x" />
    </LinearLayout>

    <Button
        android:layout_marginTop="12dp"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="15dp" />
</LinearLayout>