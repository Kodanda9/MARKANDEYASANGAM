            <LinearLayout
                android:layout_marginRight="@dimen/margin_x"
                android:layout_marginLeft="@dimen/margin_x"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:text="Address"
                    android:textSize="@dimen/margin_2x"
                    android:textStyle="bold" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/draw_edittext_bg"
                    android:layout_margin="5dp">
                    <EditText
                        android:inputType="textMultiLine|textPersonName|textCapWords"
                        android:id="@+id/address"
                        android:maxLength="500"
                        android:maxLines="6"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:background="@color/transparent"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size"
                        android:hint="Enter the Address " />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/margin_x"
                android:layout_marginLeft="@dimen/margin_x"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:text=" About you."
                    android:textSize="@dimen/margin_2x"
                    android:textStyle="bold" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/draw_edittext_bg"
                    android:layout_margin="5dp">
                    <EditText
                        android:inputType="textMultiLine|text|textCapWords"
                        android:id="@+id/aboutyou"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:background="@color/transparent"
                        android:padding="5dp"
                        android:textSize="@dimen/font_size"
                        android:maxLength="500"
                        android:maxLines="6"
                        android:hint=" About You " />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/createaccount"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="@dimen/margin_x"
                android:background="@drawable/button_selector_1"
                android:gravity="center"
                android:padding="@dimen/margin_x"
                android:text="Create account"
                android:textAlignment="center"
                android:textSize="@dimen/margin_2x" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>