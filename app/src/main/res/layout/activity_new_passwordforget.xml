<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_x2"
    android:background="@drawable/back"
    tools:context=".activity.NewPasswordforget">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:padding="@dimen/margin_x"
        android:background="@drawable/form_edit_text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/LayoutHeadings"
                    android:layout_weight="1"
                    android:text="New Password"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <TextView
        android:visibility="invisible"
        android:id="@+id/phone3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:inputType="number"
        android:maxLength="10"
        android:padding="8dp"
        android:textColor="#000" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_x2"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_size"
            android:layout_marginRight="@dimen/font_size">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edittext_bg">

                <EditText
                    android:id="@+id/setforget"
                    style="@style/TextInputLayoutStyle"
                    android:gravity="start|center_vertical"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/padding_x2" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_x"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_size"
            android:layout_marginRight="@dimen/font_size">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edittext_bg">

                <EditText
                    android:id="@+id/setforgetconfirm"
                    style="@style/TextInputLayoutStyle"
                    android:gravity="start|center_vertical"
                    android:hint="Enter Confirm Password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/padding_x2" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <Button
            android:id="@+id/setpassworforget"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_x"
            android:background="@drawable/button_selector_1"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>