<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:theme="@style/Base.AlertDialog.AppCompat.Light"
    tools:context="com.cpetsolu.administrator.markandeyasangam.activity.HomeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="MARKANDEYA SANGAM"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Welcome To Markandeyasangam"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/home11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="Home"
            android:textSize="17dp" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/servicce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:text="Service"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
        android:id="@+id/about"
        android:layout_width="0dp"
            android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:text="AboutUs"
        android:textSize="17dp" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/contact"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:text="ContactUs"
        android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/loginn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="Login/Register"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>