<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:gravity="center"
    android:layout_margin="@dimen/margin_x">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_x"
        android:background="@drawable/draw_edittext_bg">

        <LinearLayout
            android:id="@+id/llHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="@dimen/margin_x"
            >
            <TextView
                style="@style/LayoutHeadings"
                android:text="Upload"
                android:textSize="@dimen/layoutHeadings"
                android:layout_weight="1"
                android:id="@+id/tvPpUpHeading" />
            <ImageView
                android:id="@+id/closeDialog"
                style="@style/backfrag_button_submit"
                android:layout_weight="1"
                android:padding="0dp"
                android:src="@drawable/crop_image_menu_rotate_left"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_x">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_x">
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvCamera"
                    android:text="Camera"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_x"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_weight="0.4"-->
                <!--android:layout_width="0dp"-->
                <!--android:src="@drawable/ic_file"-->
                <!--android:layout_height="wrap_content" />-->
                <ImageView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:src="@drawable/capitol"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvOther"
                    android:text="Others"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
