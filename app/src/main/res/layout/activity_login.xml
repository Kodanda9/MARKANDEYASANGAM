<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

android:layout_marginTop="@dimen/font_size"    android:background="@drawable/back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pswd"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:src="@drawable/logo" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="LOGIN HERE "
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/invalid"
        android:text="Invalid Credentials, Please Try Again."
        android:textColor="@color/material_red"
        android:textSize="@dimen/font_size"
        android:textStyle="bold" />

    <LinearLayout
    android:padding="@dimen/margin_x"
    android:layout_marginTop="@dimen/font_size"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/phonenumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/customer"
            android:drawablePadding="8dp"
            android:hint="Enter Phone Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pswd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:layout_margin="2dp"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/padlock"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/form_edit_text_bg"
        android:layout_marginLeft="@dimen/margin_x"
        android:layout_marginRight="@dimen/margin_x"
        android:padding="0dp">
        <TextView
            android:layout_width="@dimen/editTextHeight"
            style="@style/faiStyles"
            android:text="@string/fai_phNo"
            android:textColor="@color/insta_blue_bg"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/draw_edittext_bg"

            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/form_edit_text_bg"
        android:layout_marginLeft="@dimen/margin_x"
        android:layout_marginRight="@dimen/margin_x"
        android:padding="0dp">
        <TextView
            android:id="@+id/tvcp"
            android:layout_width="@dimen/editTextHeight"
            style="@style/faiStyles"
            android:text="@string/fai_phNo"
            android:textColor="@color/insta_blue_bg"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/draw_edittext_bg"

            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/signin"
        android:layout_width="178dp"
        android:layout_height="31dp"
        android:layout_marginTop="@dimen/margin_x"
        android:background="@drawable/button_selector_1"
        android:text="LOGIN"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/signup"
        android:layout_gravity="center"
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:layout_marginTop="@dimen/margin_x"
        android:background="@drawable/button_selector_1"
        android:text="Registration"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:text="Forgot Password ?"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/act"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:textSize="15dp" />
</LinearLayout>
</LinearLayout>
