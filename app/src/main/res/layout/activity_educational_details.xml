<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context=".activity.EducationalDetailsActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginTop="40dp"
       android:layout_height="match_parent">
       <Spinner
           android:layout_marginLeft="@dimen/margin_2x"
           android:layout_width="match_parent"
           android:layout_marginRight="@dimen/margin_2x"
           android:id="@+id/education"
           android:layout_height="@dimen/margin_4x">
       </Spinner>
       <EditText
           android:layout_marginLeft="@dimen/margin_4x"
           android:layout_marginRight="@dimen/margin_4x"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:background="#f0f0f4"
           android:padding="6dp"
           android:layout_marginTop="@dimen/margin_x"
           android:id="@+id/postgraduation"
           android:layout_gravity="center"
           android:gravity="center"
           android:hint="Enter the Degree "/>

       <EditText
           android:id="@+id/degree"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/margin_4x"
           android:layout_marginTop="@dimen/margin_x"
           android:layout_marginRight="@dimen/margin_4x"
           android:background="#f0f0f4"
           android:gravity="center"
           android:hint="Enter the Post Graduation "
           android:padding="6dp" />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:id="@+id/other1"
           android:layout_marginTop="@dimen/margin_x"
           android:layout_gravity="center"
           android:gravity="center"
           android:background="#f0f0f4"
           android:padding="6dp"
           android:layout_marginLeft="@dimen/margin_4x"
           android:layout_marginRight="@dimen/margin_4x"
           android:hint="Entetr Any other Education 1 "/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:id="@+id/other2"
           android:layout_marginTop="@dimen/margin_x"
           android:layout_gravity="center"
           android:gravity="center"
           android:background="#f0f0f4"
           android:padding="6dp"
           android:layout_marginLeft="@dimen/margin_4x"
           android:layout_marginRight="@dimen/margin_4x"
           android:hint="Enter Any other Education 2 "/>

       <Button
           android:id="@+id/educationalbutton"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textAllCaps="false"
           android:textSize="@dimen/margin_2x"
           android:layout_marginTop="@dimen/margin_x"
           android:text="Submit" />
   </LinearLayout>
</LinearLayout>