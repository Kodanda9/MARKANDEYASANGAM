<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SIGNUP HERE "
           android:textSize="25dp"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number Already Exists.Please Login OR Forgot Password"
        android:textSize="@dimen/margin_2x"
        android:visibility="gone"
        android:textStyle="bold"
        android:id="@+id/otp"
        android:textColor="@color/material_red"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:layout_margin="2dp"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18sp"
                android:maxLength="10"
                android:drawableStart="@drawable/customer"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:imeOptions="actionNext"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/form_edit_text_bg"
            android:layout_marginLeft="@dimen/margin_x"
            android:layout_marginRight="@dimen/margin_x"
            android:padding="0dp">
            <TextView
                android:layout_width="@dimen/editTextHeight"
                style="@style/faiStyles"
                android:text="@string/fai_phNo"
                android:textColor="@color/insta_blue_bg"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/draw_edittext_bg"

                android:layout_height="wrap_content">

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/faiStyles"
                android:layout_width="22dp"
                android:text="@string/fai_phNo"
                android:textColor="@color/insta_blue_bg" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edittext_bg">

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sendotp"
            android:layout_width="148dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_x"
            android:background="@drawable/button_selector_1"
            android:text="Send Otp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/signin"
            android:layout_width="147dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/font_size"
            android:background="@drawable/button_selector_1"
            android:padding="7dp"
            android:text="Login"
            android:textAlignment="center"
            android:textSize="13dp" />


    </LinearLayout>
</LinearLayout>