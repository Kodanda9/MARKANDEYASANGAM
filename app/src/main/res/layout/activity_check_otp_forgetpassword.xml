<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_x2"
    android:background="@drawable/back"
    tools:context=".activity.CheckOtpForgetpassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="@dimen/margin_x"
        android:background="@drawable/form_edit_text_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/LayoutHeadings"
                    android:layout_weight="1"
                    android:text="Enter OTP"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invalid OTP"
            android:textSize="@dimen/margin_2x"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/error4"
            android:textColor="@color/material_red"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_x2"/>

        <TextView
        android:id="@+id/phone2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3x"
            android:layout_marginRight="@dimen/margin_3x">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edittext_bg">

                <EditText
                    android:id="@+id/otpforget"
                    style="@style/TextInputLayoutStyle"
                    android:gravity="start|center_vertical"
                    android:hint="Enter Otp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/padding_x2" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <Button
            android:id="@+id/checkotpforget"
            android:layout_width="135dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_x"
            android:background="@drawable/button_selector_1"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16dp" />

    <TextView
        android:id="@+id/resendotp11"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:text="Resend Otp "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>